{
    "app-id": "dev.pulsar_edit.Pulsar",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "22.08",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "pulsar.sh",
    "rename-desktop-file": "pulsar.desktop",
    "rename-icon": "pulsar",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--filesystem=/mnt",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.gtk.vfs.*",
        "--env=ELECTRON_TRASH=gio",
        "--env=TMPDIR=/var/tmp"
    ],
    "modules": [
        {
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "pulsar.deb",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/pulsar-edit/pulsar/releases/download/v1.106.0/Linux.pulsar_1.106.0_amd64.deb",
                    "sha256": "8bc4b51cf4322e346d059cade1ea36dcfc6ccb93d5a2d3162f93e31e0c6095ce"
                },
                {
                    "type": "file",
                    "dest-filename": "pulsar.deb",
                    "only-arches": ["aarch64"],
                    "url": "https://github.com/pulsar-edit/pulsar/releases/download/v1.106.0/ARM.Linux.pulsar_1.106.0_arm64.deb",
                    "sha256": ""
                },
                {
                    "type": "file",
                    "path": "dev.pulsar_edit.Pulsar.metainfo.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "pip3",
                    "commands": [
                        "export PYTHONUSERBASE=\"$XDG_DATA_HOME/python\"",
                        "exec /usr/bin/pip3 \"$@\""
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "pulsar.sh",
                    "commands": [
                        "#!/bin/sh\n",
                        "/app/bin/zypak-wrapper.sh /app/Pulsar/pulsar --in-process-gpu --executed-from=\"$(pwd)\" --pid=$$ \"$@\""
                    ]
                }
            ],
            "modules": [
                "shared-modules/libsecret/libsecret.json"
            ],
            "name": "pulsar",
            "buildsystem": "simple",
            "build-commands": [
                "ar x pulsar.deb",
                "tar -xf data.tar.xz",
                "cp -r usr/* /app",
                "cp -r opt/* /app",
                "install pip3 /app/bin",
                "desktop-file-edit --set-key=Exec --set-value='pulsar.sh %U' /app/share/applications/pulsar.desktop",
                "install pulsar.sh /app/bin",
                "chmod +x /app/bin/pulsar.sh",
                "install -Dm644 dev.pulsar_edit.Pulsar.metainfo.xml /app/share/appdata/dev.pulsar_edit.Pulsar.metainfo.xml"
            ]
        }
    ]
}

